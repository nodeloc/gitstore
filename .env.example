# Server Configuration
APP_ENV=development
APP_PORT=8080
APP_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_NAME=git_store
DB_SSLMODE=disable

# GitHub OAuth Configuration
# Create OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URL=http://localhost:8080/api/auth/github/callback

# GitHub Personal Access Token for managing repository collaborators
# Create token at: https://github.com/settings/tokens
# Required scopes: repo (full control)
GITHUB_ADMIN_TOKEN=your_github_personal_access_token

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY_HOURS=720

# Payment Methods Enable/Disable
# Control which payment methods are available to users
PAYMENT_STRIPE_ENABLED=true
PAYMENT_PAYPAL_ENABLED=false
PAYMENT_ALIPAY_ENABLED=true

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# Webhook secret will be generated automatically on first run
# Or create manually in Stripe Dashboard: Developers > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration (Optional)
# Get credentials from: https://developer.paypal.com/
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Alipay Configuration (Legacy - kept for compatibility)
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_NOTIFY_URL=http://localhost:8080/api/payments/alipay/notify

# Epay (易支付) Configuration
# Alternative payment gateway supporting Alipay, WeChat Pay, etc.
# Get credentials from your Epay provider dashboard
EPAY_PID=your_epay_merchant_id
EPAY_API_URL=https://your-epay-provider.com
EPAY_PRIVATE_KEY=your_epay_rsa_private_key_base64
EPAY_PUBLIC_KEY=your_epay_platform_public_key_base64
EPAY_NOTIFY_URL=http://localhost:8080/api/webhooks/alipay

# Email Configuration (SMTP)
# Example for Gmail: Enable 2FA and create App Password at https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_FROM=noreply@yourstore.com
SMTP_FROM_NAME=Plugin Store

# Cron Configuration
# Format: minute hour day month weekday (default: 2 AM daily)
CRON_MAINTENANCE_CHECK=0 2 * * *

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_GITHUB_ID=your_github_user_id

# Default Maintenance Period (months)
DEFAULT_MAINTENANCE_MONTHS=12
