# =====================
# 1️⃣ 构建阶段（Node.js）
# =====================
FROM node:20-bookworm AS builder

WORKDIR /app

# 复制前端源码
COPY frontend/package*.json ./
RUN npm install

COPY frontend/ ./
RUN npm run build

# =====================
# 2️⃣ 运行阶段（Nginx）
# =====================
FROM nginx:alpine

# 复制构建产物
COPY --from=builder /app/dist /usr/share/nginx/html

# 复制 Nginx 配置
COPY nginx-frontend.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
